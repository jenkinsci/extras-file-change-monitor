  <modelVersion>4.0.0</modelVersion>

  <groupId>org.jvnet.hudson</groupId>
  <artifactId>file-change-monitor</artifactId>
  <version>1.0-SNAPSHOT</version>

  <name>File change monitor</name>
  <description>Little tool that monitors for a change in a directory tree and triggers a build</description>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>org.jvnet.hudson.file_change_monitor.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
